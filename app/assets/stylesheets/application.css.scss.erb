.vdivider {
  position: absolute;
  left: 50px;
  top: 0px;
  height: 100%;
  width: 1px;
  background-color: #888;
  transition: left 350ms ease-in-out;
}

#sign-out {
  cursor: pointer;
  min-width: 83px;
  position: absolute;
  left: 91.6667%;
  padding-left: 5px;
  margin-top: 12px;
  margin-left: -50px;
  padding-right: 4px;
  border-top-right-radius: 6px;
  border-bottom-right-radius: 6px;
  font-family: 'Josefin Sans', serif;
  font-size: 12px;
  color: #888;
  background-color: #222;
  transition: margin-left 350ms ease-in-out;
  span {
    color: #888;
    margin-left: 3px;
    font-size: 20px;
    padding: 3px 2px;
  }
}

#sign-out:hover {
  cursor: pointer;
  color: #eee;
  margin-left: 0px;
  box-shadow: 0 0 5px 1px rgba(81, 203, 238, 1);
  transition: margin-left 250ms ease-in-out;
  span {
    color: #eee;
  }
  .vdivider {
    left: 0px;
    background-color: #eee;
    transition: left 250ms ease-in-out;
  }
}
