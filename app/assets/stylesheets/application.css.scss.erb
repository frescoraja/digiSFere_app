<% lcolors = { job: '#5297ff', startup: '#e74848', event: '#c481ff', workspace: '#79faa1', company: '#ffe663' } %>

@import "bootstrap-sprockets";
@import "bootstrap";

html, body {
  margin: 0;
  height: 100%;
  background-color: #eee;
}

a, a:hover, a:visited, a:active, a:focus {
  color: #333;
  text-decoration: none;
}

.pac-container {
  z-index: 1002;
}

.error {
  color: red;
  font-size: .8em;
}

.errors {
  font-family: 'Josefin Sans', serif;
  font-size: 20px;
  position: absolute;
  top: 10%;
  padding: 0;
  margin: 0;
  width: 30%;
  left: 35%;
  background-color: rgba(255, 255, 255, 0.42);
  color: rgb(0, 0, 0);
  text-align: center;
  text-shadow: 0px, 0px, 5px, rgba(1, 0, 0, 0.84);
  border-bottom-left-radius: 3px;
  border-bottom-right-radius: 3px;
  z-index: 1050;
  li {
    list-style: none;
  }
}

.successes {
  font-family: 'Josefin Sans', serif;
  font-size: 22px;
  position: absolute;
}

.clearfix:after {
  content: "";
  clear: both;
  display: block;
}

.new-session-form,
.new-user-form {
  font-family: 'Josefin Sans', serif;
  text-align: center;
  color: white;
  position: absolute;
  top: 0;
  left: -300px;
  width: 300px;
  height: 100%;
  transition: left 200ms ease-in-out;
  background-image: url("login-bg.jpg");
}

.errors {
  font-family: 'Josefin Sans', serif;
  position: absolute;
  top: 0;
  transition: content 200ms ease-in-out;
}

.visible {
  left: 0px;
  transition: left 200ms ease-in-out;
}

.button-container {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 20px;
  font-family: 'Josefin Sans', serif;
}

.enter-site {
  background-color: rgba(0, 0, 0, 0);
  color: white;
  text-shadow: 0 1px 1px black;
  border: 1px solid white;
  border-top: none;
  border-bottom-left-radius: 20px;
  border-bottom-right-radius: 20px;
  padding: 10px 15px 14px;
  margin-right: 40px;
}

.enter-site:hover {
  color: rgba( .1, .1, .1, .9);
  text-shadow: 0 1px 1px white;
  border-color: rgba( .1, .1, .1, .9);
}

.enter-site:focus {
  outline: none;
}

.new-user-form button:hover
.new-user-form input[type=text]:hover,
.new-user-form input[type=password]:hover,
.new-user-form input[type=submit]:hover,
.new-user-form textarea:hover,
.new-session-form input[type=text]:hover,
.new-session-form input[type=password]:hover,
.new-session-form input[type=submit]:hover,
.new-session-form textarea:hover {
  box-shadow: 0 0 5px 1px rgba(81, 203, 238, 1);
  padding: 4px 10px 4px 10px;
  margin: 5px 1px 3px 0px;
  border: 1px solid rgba(81, 203, 238, 1);
}

.toggle-form:hover {
  color: rgba(81, 203, 238, 1);
  text-shadow: 0 0 1px white;
  cursor: pointer;
}

.new-user-form button:focus,
.new-user-form input[type=text]:focus,
.new-user-form input[type=password]:focus,
.new-user-form input[type=submit]:focus,
.new-user-form textarea:focus,
.new-session-form input[type=text]:focus,
.new-session-form input[type=password]:focus,
.new-session-form input[type=submit]:focus,
.new-session-form textarea:focus {
  box-shadow: 0 0 5px 1px rgba(81, 203, 238, 1);
  padding: 4px 10px 4px 10px;
  margin: 5px 1px 3px 0px;
  border: 1px solid rgba(81, 203, 238, 1);
  outline: none;
}

.new-user-form button,
.new-user-form input,
.new-session-form input {
  font-family: 'Josefin Sans', serif;
  color: white;
  background-color: rgba(0,0,0,0);
  text-align: center;
  border-style: none;
  padding: 4px 10px 4px 10px;
  margin: 5px 1px 3px 0px;
  font-size: 20px;
  border-radius: 10px;
  border: 1px solid white;
}

.welcome-form {
  padding-top: 100px;
}


.personal {
  position: absolute;
  padding: 20px;
  bottom: 0;
  right: 0;
}

.personal li {
  padding: 0 25px;
  display: inline-block;
}

.personal img {
  height: 60px;
}

.personal img:hover {
  opacity: .8;
}

.main {
  height: 100%;
  text-decoration: none;
  color: white;
  background-image: url("landing-bg.jpg");
  background-repeat: no-repeat;
  background-position: left;
  background-size: cover;
}

#filterbar {
  position: relative;
  height: 60px;
  width: 100%;
  background-color: #222;
  color: #eee;
  list-style-type: none;
  list-style: none;
  -webkit-padding-start: none;
}

.filterbar ul {
  list-style-type: none;
  padding-left: 0;
  margin-bottom: 0;
}

a.new, a.new:hover,
a.new:visited, a.new:active
a.new:focus {
  color: #eee;
  text-decoration: none;
}

.filterbar-view {
  position: relative;
  height: 100%;
  border-bottom: 1px solid #222;
}

.filterbar-view > li:not(:last-child) {
  border-right: 1px solid #888;
}

.filterbar-tile {
  height: 100%;
  margin: 0;
  padding: 10px 0 0 0;
  display: inline-block;
  text-align: center;
  position: relative;
  font-family: 'Josefin Sans', serif;
  font-size: 1.25em;
}

.new-listing-tile {
  border-bottom: 4px solid #888;
  padding-top: 16px;
}

.filterbar-tile:hover,
.filterbar-tile:active {
  background-color: #333;
}

.new-listing-tile:hover {
  cursor: pointer;
}

.category:hover {
  cursor: move;
}

.glyphicon.glyphicon-check {
  font-size: 1.3em;
  top: 4px;
  margin-right: 7px;
  display: inline-block;
}

.count {
  display: inline-block;
  margin-left: 10px;
  font-weight: 700;
}

.filterbar-tile.startups {
  border-bottom: 4px solid <%= lcolors[:startup] %>;
}

.filterbar-tile.companies {
  border-bottom: 4px solid <%= lcolors[:company] %>;
}

.filterbar-tile.workspaces {
  border-bottom: 4px solid <%= lcolors[:workspace] %>;
}

.filterbar-tile.jobs {
  border-bottom: 4px solid <%= lcolors[:job] %>;
}

.filterbar-tile.events {
  border-bottom: 4px solid <%= lcolors[:event] %>;
}

.num-companies, .glyphicon.companies {
  color: <%= lcolors[:company] %>;
}

.num-jobs, .glyphicon.jobs {
  color: <%= lcolors[:job] %>;
}

.num-workspaces, .glyphicon.workspaces {
  color: <%= lcolors[:workspace] %>;
}

.num-startups, .glyphicon.startups {
  color: <%= lcolors[:startup] %>;
}

.num-events, .glyphicon.events {
  color: <%= lcolors[:event] %>;
}

.clicked {
  background-color: #555;
  color: #999;
  border-bottom: 4px solid #888;
  span, .glyphicon {
    color: #999;
  }
}

.listing-show-view {
  position: relative;
  padding: 40px;
  width: 100%;
  height: 100%;
}
.maps-views {
  width: 30%;
  float: right;
  height: 100%;
}

.map-view {
  float: right;
}

.street-view {
  float: right;
}

.listing-show {
  position: relative;
  width: 70%;
  float: left;
}

.listings-header {
  position: relative;
  padding-top: 10px;
  padding-left: 40px;
  font-family: 'Josefin Sans', serif;
}

ul.listings-list {
  font-family: 'Josefin Sans', serif;
  list-style: none;
  padding-right: 40px;
}

.list-item {
  position: relative;
  padding-top: 10px;
  border-bottom: 1px solid #eee;
}

.list-item:hover {
  cursor: pointer;
  background-color: rgba(#eeeeff, 0.54);
  border-bottom: 1px solid #aaa;
}

.listing-logo-holder {
  margin-right: 10px;
  margin-bottom: 10px;
  float: left;
}

.listing-logo {
  height: 45px;
  padding: 5px;
  border-radius: 4px;
}

.listing-item-info {
  font-size: 14px;
  margin-left: 45px;
  padding-left: 10px;
  max-width: 80%;
}

.listing-item-info strong {
  display: block;
  font-size: 10px;
}

.category-title {
  float: left;
  display: block;
  clear: right;
}

.new-item {
  position: absolute;
  right: 4px;
}

.JOB {
  background-color: <%= lcolors[:job] %>;
}

.STARTUP {
  background-color: <%= lcolors[:startup] %>;
}

.COMPANY {
  background-color: <%= lcolors[:company] %>;
}

.WORKSPACE {
  background-color: <%= lcolors[:workspace] %>;
}

.EVENT {
  background-color: <%= lcolors[:event] %>;
}

#content {
  z-index: 10;
  padding: 0;
  min-width: 1050px;
  min-height: 860px;
  background: #fff;
  box-shadow: 2px 2px 6px 1px rgba(0, 0, 0, 0.2),
              -2px 2px 6px 1px rgba(0, 0, 0, 0.2);;
}

.results-container {
  height: 800px;
}

.content-view {
  height: 100%;
}

.listingsindex {
  width: 34%;
  height: 100%;
  left: 0;
  display: inline-block;
  overflow-y: auto;
}

.map {
  width: 66%;
  float: right;
  height: 100%;
  display: inline-block;
  padding: 2px;
}

#map-canvas {
  height: 100%;
  border-style: inset;
}

.listing-info-img {
  max-width: 40%;
  max-height: 80px;
  position: relative;
  left: 30%;
}

.new-listing-backdrop {
  position: fixed;
  background-color: black;
  opacity: .5;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1000;
}

.new-listing-form-container {
  font-family: 'Josefin Sans', serif;
  position: fixed;
  width: 480px;
  height: 640px;
  top: 50%;
  margin-top: -320px;
  left: 50%;
  padding: 10px;
  margin-left: -240px;
  background-color: #fcfcff;
  box-shadow: 2px 2px 10px 2px rgba(0,0,0,.8);
  border-radius: 3px;
  z-index: 1001;
}

.form.group {
  margin-bottom: 10px;
}

#description {
  resize: none;
}

.description {
  min-height: 120px;
}

.new-listing {
  margin: auto;
  width: 90%;
}

.new-listing-submit-button {
  font-size: 1.4em;
  width: 120px;
  background-color: #888;
  height: 44px;
  margin: auto;
  font-weight: 700;
  color: #eee;
  padding-top: 10px;
  text-align: center;
  border-radius: 2px;
  span {
    background-color: #444;
    color: #ddd;
    height: 44px;
    width: 25%;
    font-size: 1.6em;
    font-weight: 700;
    float: right;
    text-align: center;
    margin-top: -10px;
    border-top-right-radius: 2px;
    border-bottom-right-radius: 2px;
  }
}

.submit:hover {
  box-shadow: 0 0 5px  2px rgba(81, 203, 238, 1);
  cursor: pointer;
}

.disabled:hover {
  cursor: default;
  box-shadow: none;
}

.new-listing-img-upload {
  height: 100px;
  padding: 1px 8px;
}

.img-upload,
.img-upload:hover {
  text-decoration: underline;
}

.listing-img-goes-here img {
  height: 90px;
  max-width: 120px;
  margin-right: 10px;
  border-radius: 3px;
  box-shadow: black 0px 0px 3px;
}

#searchbar {
  width: 100%;
  min-width: 1050px;
  height: 200px;
  font-family: 'Josefin Sans', serif;
  text-shadow: 0 1px 1px #000;
  box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.4);
  background-size: cover;
  background-position: center;
}

.searchbar-view {
  padding: 0 40px;
  min-width: 900px;
}

.banner-logo {
  float: left;
