<!DOCTYPE html>
<html>
<head>
  <% if Time.now.hour > 17  || Time.now.hour < 7 %>
    <% img_src = "pm-bannersm.jpg" %>
    <% logo_src = "site-logowhite.png" %>
    <% color = "white" %>
    <% s_color = "black" %>
  <% else %>
    <% img_src = "am-bannersm.jpg" %>
    <% logo_src = "site-logoblack.png" %>
    <% color = "black" %>
    <% s_color = "white" %>
  <% end %>
  <script>
    window.LOGOSRC = '<%= logo_src %>';
  </script>
</head>
<body>
  <div id="searchbar" style="background-image: url('assets/<%= img_src %>'); color:<%= color %>;text-shadow:0 1px 1px <%= s_color %>"></div>
  <div id="content" class="col-xs-10 col-xs-offset-1"></div>
  <div id="sign-out">
    Sign Out
      <div class="vdivider"></div>
      <span class="glyphicon glyphicon-log-out"></span>
  </div>
  <div id="footer">
    <%= render "./layouts/footer" %>
  </div>
</body>
</html>

<script>
  $(document).ready(function () {
    DigiSFere.initialize()

    $('#sign-out').click(function (e) {
      $.ajax({
      url: '/session',
      type: 'DELETE'
      });
      location.href = '/';
    });

  });
</script>
