<!DOCTYPE html>
<html>
<head>
  <title>DigiSFere</title>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:300,400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% api_key = (Rails.env.production? ? ENV['google_maps_api_key'] : '') %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript">
  </script>
  <script type="text/javascript" charset="utf-8">
    window.CLOUDINARY_SETTINGS = {
      cloud_name: '<%= ENV['cloud_name'] %>',
      upload_preset: '<%= ENV['upload_preset'] %>',
      sources: ['local','url'],
      theme: 'minimal'
    }
    window.LTYPES = ["listings", "JOB", "STARTUP", "EVENT", "WORKSPACE", "COMPANY"];
    window.GOOGLE_API_KEY = '<%= ENV['google_maps_api_key'] %>';
  </script>
  <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?libraries=places,key=<%= api_key %>">
  </script>
</head>
<body>

  <%= render './layouts/errors' %>
  <%= yield %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-65050804-1', 'auto');
    ga('send', 'pageview');

  </script>

</body>
</html>
